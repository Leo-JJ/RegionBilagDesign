<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tolkebilag1_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textView">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="50dp"
                android:background="@drawable/group_row"
                android:id="@+id/Seanydenr"
                android:inputType="number"
                android:hint="Tolkebureauets Yder nr./EAN nr. *"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/group_row"
                android:inputType="text"
                android:id="@+id/tnavn"
                android:hint="Udførendes tolks navn *"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/Seanydenr"
                android:layout_alignLeft="@+id/Seanydenr"
                android:layout_alignStart="@+id/Seanydenr"
                android:layout_alignRight="@+id/Seanydenr"
                android:layout_alignEnd="@+id/Seanydenr" />

            <EditText
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/group_row"
                android:id="@+id/knavn"
                android:inputType="text"
                android:hint="Klientens navn *"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/tnavn"
                android:layout_alignLeft="@+id/tnavn"
                android:layout_alignStart="@+id/tnavn"
                android:layout_alignRight="@+id/tnavn"
                android:layout_alignEnd="@+id/tnavn" />

            <EditText
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/group_row"
                android:inputType="number"
                android:id="@+id/kCpr"
                android:hint="Klientens CPR-nr *"
                android:maxLength="10"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/knavn"
                android:layout_alignLeft="@+id/knavn"
                android:layout_alignStart="@+id/knavn"
                android:layout_alignRight="@+id/knavn"
                android:layout_alignEnd="@+id/knavn" />

            <EditText
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="50dp"
                android:background="@drawable/group_row"
                android:id="@+id/kadress"
                android:inputType="text"
                android:hint="Adresse *"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/kCpr"
                android:layout_alignLeft="@+id/kCpr"
                android:layout_alignStart="@+id/kCpr"
                android:layout_alignRight="@+id/kCpr"
                android:layout_alignEnd="@+id/kCpr" />

            <EditText
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="50dp"
                android:background="@drawable/group_row"
                android:id="@+id/kpostnr"
                android:inputType="number"
                android:hint="Post nr *"
                android:maxLength="4"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/kadress"
                android:layout_alignLeft="@+id/kadress"
                android:layout_alignStart="@+id/kadress"
                android:layout_alignRight="@+id/kadress"
                android:layout_alignEnd="@+id/kadress" />

            <EditText
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="50dp"
                android:background="@drawable/group_row"
                android:id="@+id/kby"
                android:inputType="none"
                android:hint="By *"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/kpostnr"
                android:layout_alignLeft="@+id/kpostnr"
                android:layout_alignStart="@+id/kpostnr"
                android:layout_alignRight="@+id/kpostnr"
                android:layout_alignEnd="@+id/kpostnr"
                android:editable="false" />


            <Button
                android:padding="10dp"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Næste"
                android:id="@+id/next"
                android:textColor="#000000"
                android:layout_below="@+id/kby"
                android:layout_alignLeft="@+id/kby"
                android:layout_alignStart="@+id/kby"
                android:layout_alignRight="@+id/kby"
                android:layout_alignEnd="@+id/kby" />

        </RelativeLayout>
    </ScrollView>

    <TextView
        android:text="UDFYLDES AF TOLK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
